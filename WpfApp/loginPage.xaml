<Page x:Class="WpfApp.loginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="loginPage">

    <Grid>
       
            <Frame x:Name="loginFrame" NavigationUIVisibility="Hidden" />
            <Label x:Name="LoginTitle" Content="Insira seu login" HorizontalAlignment="Left" Height="43" Margin="175,153,0,0" VerticalAlignment="Top" Width="152" FontFamily="Comic Sans MS" FontSize="18"/>
            <Label x:Name="nome" Content="Barordle" HorizontalAlignment="Center" VerticalAlignment="Top" Height="67" Width="300" HorizontalContentAlignment="Center" FontSize="36" Margin="0,10,0,0"/>
            <Button x:Name="loginButton" Content="Entrar" HorizontalAlignment="Left" Margin="522,158,0,0" VerticalAlignment="Top" FontSize="18" Height="34" Width="110" Click="loginButton_Click"/>
            <TextBox x:Name="SignInText" HorizontalAlignment="Left" Height="34" Margin="332,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" FontSize="24"  TextAlignment="Center"/>
            <Label x:Name="SignUpTitle" Content="Crie uma conta" HorizontalAlignment="Left" Height="43" Margin="175,212,0,0" VerticalAlignment="Top" Width="152" FontFamily="Comic Sans MS" FontSize="18"/>
            <Button x:Name="signupButton" Content="Criar" HorizontalAlignment="Left" Margin="522,217,0,0" VerticalAlignment="Top" FontSize="18" Height="34" Width="110" Click="signupButton_Click"/>
        <TextBox x:Name="SignUpText" HorizontalAlignment="Left" Height="34" Margin="332,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184" FontSize="24"  TextAlignment="Center"/>

    </Grid>
</Page>
